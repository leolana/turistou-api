{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "pretty": true,
        "sourceMap": true,
        "outDir": "dist",
        "importHelpers": true,
        "strict": true,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "lib": [
            "es5",
            "es6",
            "es7",
            "es2018",
            "esnext",
            "dom",
            "es2015.core",
            "es2015.collection",
            "es2015.generator",
            "es2015.iterable",
            "es2015.promise",
            "es2015.proxy",
            "es2015.reflect",
            "es2015.symbol",
            "es2015.symbol.wellknown",
            "esnext.asynciterable"
        ],
        "paths": {
          "@config": ["src/config.ts"],
          "@App": ["src/App.ts"],
          "@Context": ["src/Context.ts"],
          "@infra/*": ["src/infra/*"],
          "@domain/*": ["src/domain/*"],
          "@interfaces/*": ["src/interfaces/*"]
        }
    }
}
